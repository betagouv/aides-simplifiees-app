# =============================================================================
# Environment Variables Template - Aides Simplifiées
# =============================================================================
# Copy this file to .env for development
# For Docker environments: .env.prod, .env.preprod, .env.local
# Generate secure values with: make secrets

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Aides simplifiées"
APP_ENV=development
# APP_ENV=development|test|staging|production # For Docker: staging, production
APP_KEY=                          # Generate with: make secrets
PUBLIC_APP_URL=http://localhost:3333
# PUBLIC_APP_URL=https://aides.beta.numerique.gouv.fr  # For prod

# Server settings
TZ=UTC
HOST=localhost                    # Use 0.0.0.0 for Docker
PORT=3333
NODE_ENV=development             # development, production
SESSION_DRIVER=cookie
LOG_LEVEL=info                   # debug, info, warn, error

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_HOST=localhost                 # Use 'db' for Docker internal network
DB_PORT=5432
DB_USER=aides-simplifiees        # For Docker: aides-simplifiees, for local: root
DB_PASSWORD=                      # Generate with: make secrets
DB_DATABASE=aides-simplifiees     # aides-simplifiees-prod, aides-simplifiees-preprod

# -----------------------------------------------------------------------------
# External Services (for local dev - use localhost)
# -----------------------------------------------------------------------------
OPENFISCA_URL=http://localhost:5001/calculate
LEXIMPACT_URL=http://localhost:3000

# For Docker internal network (prod/preprod/local):
# OPENFISCA_URL=http://openfisca:5000/calculate
# LEXIMPACT_URL=http://leximpact:3000

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
ADMIN_LOGIN=admin@example.com
ADMIN_PASSWORD=                   # Generate with: make generate-secrets

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
MONITORING_SECRET=                # Generate with: make generate-secrets
LOG_LEVEL=info                    # debug, info, warn, error

# -----------------------------------------------------------------------------
# Analytics (Matomo)
# -----------------------------------------------------------------------------
MATOMO_URL=https://stats.beta.gouv.fr/
MATOMO_SITE_ID=
MATOMO_TOKEN=
